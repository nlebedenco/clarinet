root = true

[*]
charset = utf-8
end_of_line = LF
[*.[ch]]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true
[*.{cpp,hpp}]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true
[*.md]
max_line_length = 120
[CMakeLists.txt]
indent_style = space
indent_size = 4
max_line_length = 120
[*.sh]
end_of_line = LF
indent_style = space
indent_size = 2
[*.{cmd,bat}]
end_of_line = CRLF
indent_style = space
indent_size = 4
[*.yml]
indent_style = space
indent_size = 2
[*.ps1]
indent_style = space
indent_size = 4